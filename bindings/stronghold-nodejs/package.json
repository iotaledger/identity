{
  "name": "identity-stronghold-nodejs",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "napi": {
    "name": "identity-stronghold-nodejs",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-pc-windows-msvc",
        "x86_64-unknown-linux-musl",
        "x86_64-unknown-linux-gnu"
      ]
    }
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@napi-rs/cli": "^2.4.2",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/node": "^17.0.19",
    "cross-env": "^7.0.3",
    "mocha": "^9.2.1",
    "rollup": "^2.68.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.1.0",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0"
  },
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "npm run build:napi && npm run build:ts",
    "build:ts": "rollup -c",
    "build:napi": "cross-env-shell napi build --platform --release --js napi-dist/napi.js --dts napi.d.ts $NPM_BUILD_NAPI_ARGS napi-dist",
    "build:napi:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "version": "napi version",
    "create-npm-dir": "napi create-npm-dir --target ./ ",
    "test": "ts-mocha ./examples/src/tests/*.ts --parallel --jobs 4 --retries 3 --timeout 180000 --exit"
  },
  "peerDependencies": {
    "@iota/identity-wasm": "^0.5.0-dev.4"
  }
}
